<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg3">

        <Button
            android:layout_width="110dp"
            android:layout_height="250dp"
            android:id="@+id/previousSafe"
            android:layout_above="@+id/volumeDown"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@null" />

        <Button
            android:layout_width="110dp"
            android:layout_height="250dp"
            android:id="@+id/skipSafe"
            android:layout_above="@+id/volumeDown"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@null" />

        <Button
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:id="@+id/volumeUp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:background="@null" />

        <Button
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:id="@+id/volumeDown"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null" />

        <Button
            android:layout_width="150dp"
            android:layout_height="260dp"
            android:id="@+id/ppSafe"
            android:layout_above="@+id/volumeDown"
            android:layout_centerHorizontal="true"
            android:background="@null" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView3"
            android:background="@drawable/vol_up_s"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/ppImage"
            android:background="@drawable/play_button_s"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView5"
            android:background="@drawable/back_button_s"
            android:layout_alignTop="@+id/imageView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView6"
            android:background="@drawable/skip_button_s"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView7"
            android:background="@drawable/vol_down_s"
            android:layout_below="@+id/skipSafe"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>
</LinearLayout>