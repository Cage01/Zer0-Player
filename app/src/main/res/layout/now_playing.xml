<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MediaActivity"
    android:background="@drawable/bg2">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:id="@+id/imageView2"
            android:background="@drawable/art"
            android:layout_below="@+id/album_info"
            android:layout_centerHorizontal="true" />

        <Button

            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/skipButton"
            android:background="@drawable/skip_button"
            android:layout_marginBottom="72dp"
            android:layout_above="@+id/startButton"
            android:layout_toRightOf="@+id/startButton"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:height="40dp"
            android:width="40dp"
            android:clickable="true"
            android:visibility="visible"
            android:id="@+id/startButton"
            android:background="@drawable/play_button"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/playPauseButton"
            android:layout_alignEnd="@+id/playPauseButton"
            android:layout_alignTop="@+id/playPauseButton"
            android:layout_alignLeft="@+id/playPauseButton"
            android:layout_alignStart="@+id/playPauseButton" />
        <Button
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:height="40dp"
            android:width="40dp"
            android:clickable="false"
            android:visibility="invisible"
            android:id="@+id/playPauseButton"
            android:background="@drawable/play_button"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/button"
            android:background="@drawable/back_button"
            android:layout_alignTop="@+id/skipButton"
            android:layout_toLeftOf="@+id/startButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Artist"
            android:id="@+id/artist_info"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageView2"
            android:layout_toStartOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Album"
            android:id="@+id/album_info"
            android:layout_below="@+id/artist_info"
            android:layout_alignLeft="@+id/artist_info"
            android:layout_alignStart="@+id/artist_info" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Song"
            android:id="@+id/song_info"
            android:layout_below="@+id/imageView2"
            android:layout_toRightOf="@+id/button"
            android:layout_toEndOf="@+id/button" />

    </RelativeLayout>


</RelativeLayout>



